<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Life on Venus</title>
  <meta name="description" content="Hello World">
  <meta name="author" content="You">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>

<body>
  <%- include ('global/header', {title: "Venus"}); %>
<%- include ('global/navbar', {title: posts.title}); %>
<div class="container">
<div class="row">
<div class="col-lg-2"><b>Date</b></div>
<div class="col-lg-2"><b>Author</b></div>
<div class="col-lg-2"><b>Publication</b></div>
<div class="col-lg-6"><b>Content</b></div>
</div>
<div class="row">
<div class="col-lg-2"><%= posts.date %></div>
<div class="col-lg-2"><%= posts.author %></div>
<div class="col-lg-2"><%= posts.publication %></div>
<div class="col-lg-6"><%= posts.text %></div>
</div>
</div>

<div class="container">
  <h3>Comments:</h3>
  <%if(typeof posts.comments !== 'undefined'){%>
  <% for (let i=0; i<posts.comments.length; i++){%>
    <%console.log(i.toString());%>
    <div class="row">
    <div class="col-lg-2"><b>Author</b></div>
    <div class="col-lg-2"><b>Date</b></div>
    <div class="col-lg-4"><b>Content</b></div>

    </div>
    <div class="row">
    <div class="col-lg-2"><%= posts.comments[i].author %></div>
    <div class="col-lg-2"><%= posts.comments[i].date %></div>
    <div class="col-lg-4"><%= posts.comments[i].text %></div>
    <div class="col-lg-2"> <h2>likes: <span id="like_count" class = <%-i%>><%=posts.comments[i].likes%></span> <button class="like_button" id = <%-i%> type="button">Like</button> </h2></div>
    </div>

    <%}}%>
</div>
<div class="container">
  <label for="author">Author:</label>
<select name="author" id="comment-author">
  <% for (let i=0; i<users.length; i++){%>
    <option value= <%=users[i]%>><%=users[i]%></option>
    <%}%>
</select>
<label for="date">Date:</label><br>
<input type="date" id="comment-date" name="date"><br>
  <textarea type="text" id="comment-text" name="text"></textarea>
  <button id="comment-submit" type="button">Submit Comment</button>
</div>




  <%- include ('global/footer'); %>
  <script src="/js/userdetails_scripts.js"></script>
</body>

</html>
